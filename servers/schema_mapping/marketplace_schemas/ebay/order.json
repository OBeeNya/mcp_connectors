{
  "marketplace": "ebay",
  "entity": "Order",
  "source_endpoints": ["getOrder"],
  "merge_strategy": "Single call — getOrder returns the full order including line items and shipping address. No merging needed.",
  "amount_format": "String — e.g. \"19.99\". Use str_to_decimal transformation.",
  "datetime_format": "ISO 8601 with milliseconds — e.g. \"2024-01-15T10:30:00.000Z\". Use datetime_iso transformation.",
  "fields": [
    {"name": "orderId",                                                           "type": "string",  "required": true},
    {"name": "legacyOrderId",                                                     "type": "string",  "required": false, "note": "Present on orders from the legacy Trading API"},
    {"name": "creationDate",                                                      "type": "string",  "required": true,  "format": "ISO 8601"},
    {"name": "lastModifiedDate",                                                  "type": "string",  "required": true,  "format": "ISO 8601"},
    {"name": "orderFulfillmentStatus",                                            "type": "string",  "required": true,  "values": ["NOT_STARTED", "IN_PROGRESS", "FULFILLED"]},
    {"name": "orderPaymentStatus",                                                "type": "string",  "required": true,  "values": ["FULLY_REFUNDED", "PAID", "FAILED", "PARTIALLY_REFUNDED", "PENDING"]},
    {"name": "pricingSummary.priceSubtotal.value",                                "type": "string",  "required": false},
    {"name": "pricingSummary.priceSubtotal.currency",                             "type": "string",  "required": false},
    {"name": "pricingSummary.total.value",                                        "type": "string",  "required": true},
    {"name": "pricingSummary.total.currency",                                     "type": "string",  "required": true},
    {"name": "pricingSummary.deliveryCost.shippingCost.value",                    "type": "string",  "required": false},
    {"name": "pricingSummary.tax.value",                                          "type": "string",  "required": false},
    {"name": "buyer.username",                                                    "type": "string",  "required": false},
    {"name": "buyer.buyerRegistrationAddress.email",                              "type": "string",  "required": false},
    {"name": "fulfillmentStartInstructions[0].shippingStep.shipTo.fullName",      "type": "string",  "required": false},
    {"name": "fulfillmentStartInstructions[0].shippingStep.shipTo.primaryPhone.phoneNumber", "type": "string", "required": false},
    {"name": "fulfillmentStartInstructions[0].shippingStep.shipTo.contactAddress.addressLine1", "type": "string", "required": false},
    {"name": "fulfillmentStartInstructions[0].shippingStep.shipTo.contactAddress.addressLine2", "type": "string", "required": false},
    {"name": "fulfillmentStartInstructions[0].shippingStep.shipTo.contactAddress.city",        "type": "string", "required": false},
    {"name": "fulfillmentStartInstructions[0].shippingStep.shipTo.contactAddress.stateOrProvince","type": "string","required": false},
    {"name": "fulfillmentStartInstructions[0].shippingStep.shipTo.contactAddress.postalCode",  "type": "string", "required": false},
    {"name": "fulfillmentStartInstructions[0].shippingStep.shipTo.contactAddress.countryCode", "type": "string", "required": false},
    {"name": "fulfillmentStartInstructions[0].shippingStep.shippingServiceCode",  "type": "string",  "required": false, "note": "Requested shipping service"},
    {"name": "lineItems[].lineItemId",                                            "type": "string",  "required": true},
    {"name": "lineItems[].legacyItemId",                                          "type": "string",  "required": false},
    {"name": "lineItems[].sku",                                                   "type": "string",  "required": false},
    {"name": "lineItems[].title",                                                 "type": "string",  "required": false},
    {"name": "lineItems[].quantity",                                              "type": "integer", "required": true},
    {"name": "lineItems[].lineItemCost.value",                                    "type": "string",  "required": false, "note": "Total line cost (unit × qty)"},
    {"name": "lineItems[].lineItemCost.currency",                                 "type": "string",  "required": false},
    {"name": "lineItems[].discountedLineItemCost.value",                          "type": "string",  "required": false},
    {"name": "lineItems[].taxes[0].amount.value",                                 "type": "string",  "required": false},
    {"name": "lineItems[].lineItemFulfillmentStatus",                             "type": "string",  "required": false, "values": ["NOT_STARTED", "SHIPPED", "DELIVERED", "RETURN_IN_PROGRESS", "RETURNED"]}
  ]
}
